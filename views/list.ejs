<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%=listTitle%>
        </h1>
    </div>

    <div class="box">


        <% newItem.forEach(item=> {%>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                    <p>
                        <%=item.name%>
                    </p>
                </div>
                <input type="hidden" name="checkboxList" value=<%=listTitle%>></input>
            </form>
            <% }); %>


                <form class="item" action="/add" method="post">
                    <input type="text" name="newItemAdd" placeholder="New item" autocomplete="off" autofocus></input>
                    <button type="submit" name="list" value=<%=listTitle%>>+</button>
                </form>
    </div>
    <%- include("footer") -%>